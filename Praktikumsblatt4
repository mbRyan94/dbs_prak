DROP TABLE Familienbaum;

CREATE TABLE Familienbaum
(Name VARCHAR (30),
Geschlecht VARCHAR (30),
Gebohren Integer,
Gestorben Integer,
Vater VARCHAR (30),
Mutter VARCHAR (30));

